<p id="notice"><%= notice %></p>
<div class="container dboard">
<div class="row">
	<div class="col-xs-12">
		<div class="box">
			<div class="box-header">
				
				<h3 class="box-title"> <% content_for :title, "Patient Details" %> </h3>
				<%= link_to new_patient_report_path,:class=>"btn d_btn btn-success" do %>
					Create  <i class="fa fa-plus-circle d_btn_icon" aria-hidden="true"></i>
				<% end %>  
				
			</div>
			<!-- /.box-header -->
			<div class="box-body table-responsive no-padding">
				<table id="example" class="table table-striped table-bordered" style="width:100%">
					<thead>
						<tr>
							<th>Patient Name </th>
							<th>Report Name </th>
							<th>Report Status </th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						<% @reports.each do |report| %>
							<tr>
								<td><%= Patient.find_by(id:report.patient_id).first_name if report.patient_id%></td>
								<td><%= Report.find_by(id:report.report_id).report_name if report.report_id%></td>
								<td><%= ReportStatus.find_by(id:report.report_status_id).name if report.report_status_id%></td>
								<td>
									<%= link_to "Edit" , edit_patient_report_path(report) , class: "btn btn-primary btn-sm" %>
									<%= link_to "Show" , report , class: "btn btn-warning btn-sm" %>
									<%= link_to 'Delete', report, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-sm" %>
								</td>
							</tr>
						<% end %>                
					</tbody>
				</table>
			</div>
			
			<!-- /.box-body -->
		</div>
		<!-- /.box -->
	</div>
</div>
</div>