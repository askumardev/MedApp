						<%= f.text_field :country ,:required=>true ,:class=>"form-control", placeholder: "Enter Country" %>
					</div>
				</div>
				<div class="form-group col-md-6">
					<label class="control-label col-sm-5 col-md-4" for="team_membr_fname">Zip <span style="color:Red">*</span></label>  
					<div class="col-sm-7 col-md-8">
						<%= f.text_field :zip ,:required=>true ,:class=>"form-control", placeholder: "Enter zip code" %>
					</div>
				</div>
			</div>
			<div class="row">
  			<div class="col-md-12">
    			<%= f.submit 'Save',:class=>"btn btn-primary",:style=>"margin-bottom:15px;"%>
  			</div>  
			</div>

    <%end%>
  </div>
      <!-- /.col -->
    
