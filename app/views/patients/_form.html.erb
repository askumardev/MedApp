					<div class="col-sm-7 col-md-8">
						<%= f.text_field :city ,:required=>true ,:class=>"form-control", placeholder: "Enter city" %>
					</div>
				</div>
				<div class="form-group col-md-6">
					<label class="control-label col-sm-5 col-md-4" for="team_membr_fname">State <span style="color:Red">*</span></label>  
					<div class="col-sm-7 col-md-8">
						<%= f.text_field :state ,:required=>true ,:class=>"form-control", placeholder: "Enter State" %>
					</div>
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-md-6">					
					<label class="control-label col-sm-5 col-md-4" for="team_membr_fname">Country <span style="color:Red">*</span></label>  
